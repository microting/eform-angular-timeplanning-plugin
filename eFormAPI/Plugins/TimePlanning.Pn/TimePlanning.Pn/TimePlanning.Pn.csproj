      <PackageReference Include="Microting.TimePlanningBase" Version="8.0.39" />
      <PackageReference Include="Sentry" Version="4.9.0" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="Resources\eForms\00. Arbejdstid.xml" />
      <EmbeddedResource Include="Resources\localization.json" />
      <None Remove="Resources\eForms\01. Info eForm.xml" />
